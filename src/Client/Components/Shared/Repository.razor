@using System.Text.Json
<MudGrid>
    <MudItem xs="12">
        <MudPaper Elevation="25" Class="d-flex flex-row pt-6 pb-4">
            <MudIcon Icon="@Icons.Material.Filled.Assignment" Color="Color.Error" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudCard Elevation="0">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">Repository Attributes</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent Class="pa-0">
                        <MudGrid>
                            <MudItem xs="6">
                                <MudTextField Label="Name" Value="@RepositoryInstance?.Name" ReadOnly="true" />
                            </MudItem>
                            <MudItem xs="6">
                                <MudTextField Label="Registry Login Server" Value="@RepositoryInstance?.RegistryLoginServer" ReadOnly="true" />
                            </MudItem>
                            <MudItem xs="6">
                                <MudTextField Label="Updated On" Value="@RepositoryInstance?.ModifiedDate" ReadOnly="true" />
                            </MudItem>
                            <MudItem xs="6">
                                <MudTextField Label="Created On" Value="@RepositoryInstance?.CreatedDate" ReadOnly="true" />
                            </MudItem>
                            <MudItem xs="6">
                                <MudTextField Label="Manifest Count" Value="@RepositoryInstance?.ManifestCount" ReadOnly="true" />
                            </MudItem>
                            <MudItem xs="6">
                                <MudTextField Label="Tag Count" Value="@RepositoryInstance?.TagCount" ReadOnly="true" />
                            </MudItem>
                        </MudGrid>
                    </MudCardContent>
                </MudCard>

            </div>
        </MudPaper>
    </MudItem>
    <MudItem xs="12">
        <MudPaper Elevation="25" Class="pa-4">
            <MudCard Elevation="0">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">Repository Manifest</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent Class="pa-0">
                    <MudGrid>
                        <MudItem xs="12">
                            <pre>
                                @(JsonSerializer.Serialize(RepositoryInstance?.Manifest, new JsonSerializerOptions() { WriteIndented = true }))
                            </pre>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudPaper>
    </MudItem>
</MudGrid>